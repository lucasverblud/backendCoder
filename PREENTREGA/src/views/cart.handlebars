
    <header>
        <h1>Carrito de Compras</h1>
    </header>
    <main>
        {{#if error}}
            <p>Error: {{error}}</p>
        {{else if cart}}
            <section>
                <h2>Carrito ID: {{cart._id}}</h2>
                <p>Creado el: {{cart.createdAt}}</p>
                <p>Última actualización: {{cart.updatedAt}}</p>

                {{#if cart.products.length}}
                    <h3>Productos en el carrito:</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Descripción</th>
                                <th>Precio</th>
                                <th>Cantidad</th>
                                <th>Categoría</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each cart.products}}
                                <tr>
                                    <td>{{this.product.title}}</td>
                                    <td>{{this.product.description}}</td>
                                    <td>${{this.product.price}}</td>
                                    <td>{{this.quantity}}</td>
                                    <td>{{this.product.category}}</td>
                                    <td>${{multiply this.product.price this.quantity}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <p>El carrito está vacío.</p>
                {{/if}}
            </section>
        {{else}}
            <p>No se encontró información para el carrito.</p>
        {{/if}}
    </main>

